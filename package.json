{
    "name": "@open-source-bazaar/open-library-service",
    "version": "1.0.0",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "RESTful API service scaffold based on Node.js & TypeScript",
    "homepage": "https://github.com/Open-Source-Bazaar/Open-Library-service#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Open-Source-Bazaar/Open-Library-service.git"
    },
    "bugs": {
        "url": "https://github.com/Open-Source-Bazaar/Open-Library-service/issues"
    },
    "source": "source/index.ts",
    "main": "dist/index.js",
    "engines": {
        "node": ">=20"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.844.0",
        "@aws-sdk/s3-request-presigner": "^3.844.0",
        "@koa/cors": "^5.0.0",
        "@koa/multer": "^4.0.0",
        "@koa/router": "^13.1.1",
        "@smithy/smithy-client": "^4.4.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cross-env": "^7.0.3",
        "dotenv": "^17.2.0",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.16.1",
        "koa-bodyparser": "^4.4.1",
        "koa-jwt": "^4.0.4",
        "koa-logger": "^4.0.0",
        "koa-mount": "^4.2.0",
        "koa2-swagger-ui": "^5.11.0",
        "koagger": "^0.4.0",
        "marked": "^16.0.0",
        "mobx-github": "^0.3.11",
        "mobx-restful": "^2.1.0",
        "pg": "^8.16.3",
        "pg-connection-string": "^2.9.1",
        "reflect-metadata": "^0.2.2",
        "routing-controllers": "^0.11.2",
        "routing-controllers-openapi": "^5.0.0",
        "tslib": "^2.8.1",
        "typeorm": "^0.3.25",
        "undici": "^7.11.0",
        "web-utility": "^4.4.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@octokit/openapi-types": "^25.1.0",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/koa": "^2.15.0",
        "@types/koa-logger": "^3.1.5",
        "@types/node": "^22.16.2",
        "better-sqlite3": "^12.2.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jiti": "^2.4.2",
        "koajax": "^3.1.2",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "start-server-and-test": "^2.0.12",
        "swagger-typescript-api": "^13.2.7",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.36.0"
    },
    "resolutions": {
        "reflect-metadata": "$reflect-metadata"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "better-sqlite3"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write",
        "*.ts": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "scripts": {
        "install": "cp -u .env.example .env  ||  true",
        "prepare": "husky || true",
        "dev": "cross-env TS_NODE_TRANSPILE_ONLY=true  node -r ts-node/register --watch source/",
        "lint": "lint-staged",
        "build-test": "swagger-typescript-api generate -p http://localhost:8080/docs/spec -o test/ -n client.ts",
        "start-test": "rm -rf .data/  &&  node dist/",
        "jest": "jest",
        "debug": "server-test start-test 8080 jest",
        "test": "npm run build  &&  server-test start-test 8080 build-test  &&  npm run debug",
        "build": "rm -rf dist/ type/*.d.ts  &&  tsc  &&  mv dist/model/*.d.ts type/",
        "start": "cross-env NODE_ENV=production  node dist/",
        "typeorm": "typeorm-ts-node-commonjs -d source/model/index.ts",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "upgrade:dev": "npm run migration:generate -- migration/version  &&  npm run migration:run",
        "upgrade:pro": "cross-env NODE_ENV=production  npm run migration:generate -- .data/version  &&  npm run migration:run",
        "pack-image": "docker build -t open-source-bazaar/open-library-service:latest .",
        "container": "docker rm -f open-library-service  &&  docker run --name open-library-service -p 8080:8080 -d open-source-bazaar/open-library-service:latest"
    }
}
